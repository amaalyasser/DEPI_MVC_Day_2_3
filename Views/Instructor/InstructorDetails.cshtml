@model Instructor;
<div class="card" style="width: 50rem;">
    <img class="card-img-top" src="/Images/@Model.Img" style="height:100px;width:100px" alt="Card image cap">
    <div class="card-body">
        <h5 class="card-title">@Model.Id</h5>
        <p class="card-text">@Model.Name</p>
        <p class="card-text">@Model.Address</p>
        <p class="card-text">@Model.Salary</p>
        <p class="card-text" style="color:red">--------Course Information-------</p>
        <p class="card-text">@Model.Course.Name</p>
        <p class="card-text">@Model.Course.Degree</p>
        <p class="card-text">@Model.Course.MinDegree</p>

        <p class="card-text" style="color:red">------Department Information-----</p>
        <p class="card-text">@Model.Department.Name</p>
        <p class="card-text">@Model.Department.ManagerName</p>

        <p class="card-text" style="color:red">------Course Result Information-----</p>
        @foreach (var item in Model.Course.CourseResults)
        {
            <p class="card-text">@item.degree</p>

            <p class="card-text" style="color:red">--------Trainee Information-------</p>
            <p class="card-text">@item.Traniee.Name</p>
            <p class="card-text">@item.Traniee.Address</p>
            <p class="card-text">@item.Traniee.Grade</p>
            <p class="card-text"><img src="/Images/@item.Traniee.Img" style="width:100px;height:100px" /></p>
        }
       


        <a href="@Url.Action("Index", "Instructor")" class="btn btn-primary">back</a>
    </div>
</div>
